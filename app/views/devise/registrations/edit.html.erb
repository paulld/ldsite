<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class => 'user-edit-password' }) do |f| %>
  <%#= f.error_notification %>
  <div class="row">
    <div class="col-sm-6">
      <h2>Modifier mon Mot de Passe</h2>

      <div class="form-inputs">
        <%#= f.input :username, required: true, autofocus: true %>
        <%#= f.input :email, required: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, autocomplete: "off", required: false, label: 'Nouveau mot de passe', hint: ("6 charactères minimum") %>
        <%= f.input :password_confirmation, required: false, label: 'Confirmation du nouveau mot de passe' %>
        <%= f.input :current_password, hint: "nécessaire pour confirmer la modification", required: true, label: 'Mot de passe actuel' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Mettre à jour" %>
      </div>
    </div>
  </div>
<% end %>

