<h2>Se Connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    
    <%= f.input :login, label: 'Rang familial ou email unique', required: false, autofocus: true %>
    <%= f.input :password, label: 'Mot de Passe', required: false %>
    <%= f.input :remember_me, label: 'Retenir', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

